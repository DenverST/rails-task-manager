<h2>Let's update <%= @task.title.upcase %> :)</h2>

<%= form_for(@task, url: update_path(@task), method: "patch") do %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title:</label>
  <input type="text" name="task[title]" id="tilte" value="<%= @task.title %>">

  <label for="details">Details: </label>
  <input type="text" name="task[details]" id="details" value="<%= @task.details %>">

  <label for="completed">Completed: </label>
  <input type="boolean" name="task[completed]" id="completed" value="<%= @task.completed %>">

  <input type="submit">
<% end %>

